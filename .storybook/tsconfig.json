{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "../src/**/*",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "../node_modules",
    "../build",
    "../dist"
  ]
}
